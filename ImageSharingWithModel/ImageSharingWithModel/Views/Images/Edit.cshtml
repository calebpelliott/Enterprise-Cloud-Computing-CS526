@using ImageSharingWithModel.Controllers

@model ImageSharingWithModel.Models.ImageView

@{
    ViewBag.Title = "Edit Image";
}

<h2>@ViewBag.Title</h2>

<form method="post" asp-action="DoEdit" asp-controller="Images">

    <fieldset>
        <legend>Edit Image Information</legend>

        <input type="hidden" asp-for="Id"/>

        <p>
            <img src="~/@(ImagesController.imageContextPath(Model.Id))" />
        </p>

        <p>Image id: @Model.Id</p>

        <p>
            Caption: <!-- TODO -->

        </p>
        <p>
            Select a tag: <!-- TODO -->

        </p>
        <p>
            Description:<br /> <!-- TODO -->

        </p>
        <p>
            Date taken:<!-- TODO -->

        </p>
        <p>
            <input type="submit" value="Submit Changes" />
        </p>
    </fieldset>

    <p>@ViewBag.Message</p>
    <p><div class="text-danger" asp-validation-summary="ModelOnly"></div></p>

</form>
